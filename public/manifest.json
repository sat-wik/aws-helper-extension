{
  "manifest_version": 3,
  "name": "AWS Helper",
  "version": "1.0",
  "description": "Chat assistant for AWS using free LLM and webpage interactions.",
  "permissions": ["scripting", "activeTab", "storage", "https://aws-helper-extension.onrender.com/*"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
